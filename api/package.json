{
  "name": "paypay-api",
  "version": "1.0.0",
  "description": "",
  "main": "index.ts",
  "scripts": {
    "dev": "micro-dev --silent --port 5000 index.js",
    "test": "NODE_ENV=test npm run db:migrate:latest && jest --coverage --runInBand",
    "gql:types": "graphql-codegen --config codegen.yml",
    "db:migrate:make": "knex --knexfile src/database/knexfile.ts migrate:make",
    "db:migrate:latest": "knex --knexfile src/database/knexfile.ts migrate:latest",
    "db:migrate:rollback": "knex --knexfile src/database/knexfile.ts migrate:rollback",
    "db:seed:make": "knex --knexfile src/database/knexfile.ts seed:make",
    "db:seed:run": "knex --knexfile src/database/knexfile.ts seed:run",
    "db:types": "schemats generate"
  },
  "jest": {
    "roots": [
      "<rootDir>/src"
    ],
    "transform": {
      "^.+\\.(ts|tsx|js)?$": "ts-jest"
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ],
    "globalTeardown": "./tests/jest/globalTeardown.ts"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@types/bcrypt": "^3.0.0",
    "apollo-server-micro": "^2.16.0",
    "bcrypt": "^5.0.0",
    "dotenv-flow": "^3.2.0",
    "graphql": "^15.3.0",
    "graphql-scalars": "^1.2.2",
    "jsonwebtoken": "^8.5.1",
    "knex": "^0.21.2",
    "merge-graphql-schemas": "^1.7.8",
    "micro": "^9.3.4",
    "micro-cors": "^0.1.1",
    "mysql": "^2.18.1"
  },
  "devDependencies": {
    "@graphql-codegen/add": "^1.17.3",
    "@graphql-codegen/cli": "^1.17.3",
    "@graphql-codegen/schema-ast": "^1.17.3",
    "@graphql-codegen/typescript": "^1.17.3",
    "@graphql-codegen/typescript-document-nodes": "^1.17.3",
    "@graphql-codegen/typescript-resolvers": "^1.17.3",
    "@types/faker": "^4.1.12",
    "@types/graphql": "^14.5.0",
    "@types/jest": "^26.0.5",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/micro-cors": "^0.1.1",
    "@types/node": "^14.0.24",
    "@types/yup": "^0.29.3",
    "@typescript-eslint/eslint-plugin": "^3.7.0",
    "@typescript-eslint/parser": "^3.7.0",
    "apollo-server-testing": "^2.16.0",
    "eslint": "^7.5.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-jest": "^23.18.0",
    "eslint-plugin-prettier": "^3.1.4",
    "faker": "^4.1.0",
    "jest": "^26.1.0",
    "micro-dev": "^3.0.0",
    "prettier": "^2.0.5",
    "schemats": "^3.0.3",
    "ts-jest": "^26.1.3",
    "ts-node": "^8.10.2",
    "typescript": "^3.9.7",
    "utility-types": "^3.10.0"
  }
}
